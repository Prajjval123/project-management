{
  "compilerOptions": {
    "target": "es2016",                                  // Set the JavaScript language version for emitted JavaScript.
    "module": "nodenext",                                // Specify the module system.
    "moduleResolution": "nodenext",                      // Define how TypeScript resolves module paths.
    "resolveJsonModule": true,                           // Enable importing .json files.
    "outDir": "./dist",                                  // Output directory for emitted files.
    "esModuleInterop": true,                             // Ensure compatibility with CommonJS and ES modules.
    "forceConsistentCasingInFileNames": true,            // Ensure import paths have consistent casing.
    "skipLibCheck": true                                 // Skip type checking of declaration files (.d.ts).
  },
  "include": ["src/**/*", "src/data/**/*.json", "prisma/**/*"]
}
